@page "/settlement"
@using DataHub.Settlement.Infrastructure.Dashboard
@inject DashboardQueryService Queries

<div class="mb-8">
    <h1 class="text-2xl font-extrabold text-white tracking-tight">Settlement Results</h1>
    <p class="text-sm text-slate-400 mt-1">Completed settlement runs with charge breakdowns.</p>
</div>

@if (_runs.Count == 0)
{
    <div class="text-center py-16 text-slate-500 text-sm bg-white/[0.02] backdrop-blur-sm rounded-xl border border-white/[0.04]">
        No settlement runs yet. Complete the sunshine scenario to see results.
    </div>
}
else
{
    @foreach (var run in _runs)
    {
        <div class="relative bg-white/[0.03] backdrop-blur-sm border border-white/[0.06] rounded-xl p-5 mb-4">
            <div class="absolute inset-y-0 left-0 w-[2px] rounded-l-xl bg-gradient-to-b from-blue-400 to-blue-600"></div>
            <div class="text-[0.65rem] font-semibold uppercase tracking-wider text-slate-500 mb-1">Settlement Run â€” @run.Period</div>
            <div class="text-sm text-slate-400">
                GSRN: <code class="font-mono font-semibold text-slate-300">@run.Gsrn</code>
                <span class="mx-2 text-slate-600">&middot;</span>
                @run.CustomerName
                <span class="mx-2 text-slate-600">&middot;</span>
                <span class="font-mono tabular-nums">@run.ExecutedAt.ToString("yyyy-MM-dd HH:mm")</span>
            </div>
        </div>

        <div class="bg-white/[0.03] backdrop-blur-sm border border-white/[0.06] rounded-xl overflow-hidden mb-8">
            <table class="w-full">
                <thead>
                    <tr class="bg-white/[0.04]">
                        <th class="px-5 py-3 text-left text-[0.65rem] font-semibold uppercase tracking-wider text-slate-500">Charge Type</th>
                        <th class="px-5 py-3 text-right text-[0.65rem] font-semibold uppercase tracking-wider text-slate-500">Quantity (kWh)</th>
                        <th class="px-5 py-3 text-right text-[0.65rem] font-semibold uppercase tracking-wider text-slate-500">Amount (DKK)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/[0.04]">
                    @foreach (var line in run.Lines)
                    {
                        var rowClass = line.IsTotal ? "font-bold text-white bg-white/[0.02]" : line.IsSubtotal ? "font-semibold border-t-2 border-white/[0.08]" : "";
                        <tr class="@rowClass hover:bg-white/[0.015] transition-colors duration-150">
                            <td class="px-5 py-2.5 text-sm text-slate-300">@line.ChargeType</td>
                            <td class="px-5 py-2.5 text-sm text-right font-mono tabular-nums text-slate-400">@(line.Quantity > 0 ? line.Quantity.ToString("N3") : "")</td>
                            <td class="px-5 py-2.5 text-sm text-right font-mono tabular-nums text-slate-200">@line.Amount.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    private List<SettlementRunView> _runs = new();

    protected override async Task OnInitializedAsync()
    {
        var runs = await Queries.GetSettlementRunsAsync();
        foreach (var run in runs)
        {
            var lines = await Queries.GetSettlementLinesAsync(run.RunId);
            var gsrn = lines.FirstOrDefault()?.MeteringPointId ?? "N/A";
            var customerName = await Queries.GetCustomerNameForMeteringPointAsync(gsrn) ?? "Unknown";

            var period = $"{run.PeriodStart:yyyy-MM-dd} to {run.PeriodEnd:yyyy-MM-dd}";

            var viewLines = new List<SettlementLineView>();
            decimal subtotal = 0;
            foreach (var line in lines)
            {
                viewLines.Add(new SettlementLineView(
                    FormatChargeType(line.ChargeType), line.TotalKwh, line.TotalAmount));
                subtotal += line.TotalAmount;
            }

            var vatAmount = Math.Round(subtotal * 0.25m, 2);
            viewLines.Add(new SettlementLineView("Subtotal", 0, subtotal, IsSubtotal: true));
            viewLines.Add(new SettlementLineView("VAT (25%)", 0, vatAmount));
            viewLines.Add(new SettlementLineView("Total", 0, subtotal + vatAmount, IsTotal: true));

            _runs.Add(new SettlementRunView(period, gsrn, customerName, run.ExecutedAt, viewLines));
        }
    }

    private static string FormatChargeType(string chargeType) => chargeType switch
    {
        "energy" => "Energy",
        "grid_tariff" => "Grid Tariff",
        "system_tariff" => "System Tariff",
        "transmission_tariff" => "Transmission Tariff",
        "electricity_tax" => "Electricity Tax",
        "grid_subscription" => "Grid Subscription",
        "supplier_subscription" => "Supplier Subscription",
        _ => chargeType,
    };

    private record SettlementRunView(
        string Period,
        string Gsrn,
        string CustomerName,
        DateTime ExecutedAt,
        List<SettlementLineView> Lines);

    private record SettlementLineView(
        string ChargeType,
        decimal Quantity,
        decimal Amount,
        bool IsSubtotal = false,
        bool IsTotal = false);
}

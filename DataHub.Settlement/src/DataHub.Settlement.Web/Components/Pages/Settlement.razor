@page "/settlement"
@using DataHub.Settlement.Infrastructure.Dashboard
@inject DashboardQueryService Queries

<h1>Settlement Results</h1>

@if (_runs.Count == 0)
{
    <div class="empty-state">No settlement runs yet. Complete the sunshine scenario to see results.</div>
}
else
{
    @foreach (var run in _runs)
    {
        <div class="card" style="margin-bottom: 1.5rem;">
            <div class="label">Settlement Run â€” @run.Period</div>
            <div style="font-size: 0.85rem; color: var(--text-muted); margin-bottom: 0.5rem;">
                GSRN: <code>@run.Gsrn</code> &middot; @run.CustomerName &middot; @run.ExecutedAt.ToString("yyyy-MM-dd HH:mm")
            </div>
        </div>

        <table style="margin-bottom: 2rem;">
            <thead>
                <tr>
                    <th>Charge Type</th>
                    <th class="amount">Quantity (kWh)</th>
                    <th class="amount">Amount (DKK)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in run.Lines)
                {
                    <tr class="@(line.IsSubtotal ? "subtotal-row" : "") @(line.IsTotal ? "total-row" : "")">
                        <td>@line.ChargeType</td>
                        <td class="amount">@(line.Quantity > 0 ? line.Quantity.ToString("N3") : "")</td>
                        <td class="amount">@line.Amount.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private List<SettlementRunView> _runs = new();

    protected override async Task OnInitializedAsync()
    {
        var runs = await Queries.GetSettlementRunsAsync();
        foreach (var run in runs)
        {
            var lines = await Queries.GetSettlementLinesAsync(run.RunId);
            var gsrn = lines.FirstOrDefault()?.MeteringPointId ?? "N/A";
            var customerName = await Queries.GetCustomerNameForMeteringPointAsync(gsrn) ?? "Unknown";

            var period = $"{run.PeriodStart:yyyy-MM-dd} to {run.PeriodEnd:yyyy-MM-dd}";

            var viewLines = new List<SettlementLineView>();
            decimal subtotal = 0;
            foreach (var line in lines)
            {
                viewLines.Add(new SettlementLineView(
                    FormatChargeType(line.ChargeType), line.TotalKwh, line.TotalAmount));
                subtotal += line.TotalAmount;
            }

            var vatAmount = Math.Round(subtotal * 0.25m, 2);
            viewLines.Add(new SettlementLineView("Subtotal", 0, subtotal, IsSubtotal: true));
            viewLines.Add(new SettlementLineView("VAT (25%)", 0, vatAmount));
            viewLines.Add(new SettlementLineView("Total", 0, subtotal + vatAmount, IsTotal: true));

            _runs.Add(new SettlementRunView(period, gsrn, customerName, run.ExecutedAt, viewLines));
        }
    }

    private static string FormatChargeType(string chargeType) => chargeType switch
    {
        "energy" => "Energy",
        "grid_tariff" => "Grid Tariff",
        "system_tariff" => "System Tariff",
        "transmission_tariff" => "Transmission Tariff",
        "electricity_tax" => "Electricity Tax",
        "grid_subscription" => "Grid Subscription",
        "supplier_subscription" => "Supplier Subscription",
        _ => chargeType,
    };

    private record SettlementRunView(
        string Period,
        string Gsrn,
        string CustomerName,
        DateTime ExecutedAt,
        List<SettlementLineView> Lines);

    private record SettlementLineView(
        string ChargeType,
        decimal Quantity,
        decimal Amount,
        bool IsSubtotal = false,
        bool IsTotal = false);
}
